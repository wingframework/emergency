<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.example.demo.Staff.Mappers.StaffMapper"   >
    <insert id="Create" >
        insert  into staff (username,nickname,job,groupname,phonenumber)
        values(#{staff.username},#{staff.nickname}, #{staff.job},#{staff.groupname},#{staff.phonenumber}  )

    </insert>

    <select id="CountzbrExsit" resultType="int">
        SELECT count(*) FROM staff where username =#{staff.username} or nickname = #{staff.nickname};
    </select>



    <select id="All" resultType="com.example.demo.Staff.entitys.Staff">
        SELECT * FROM staff
    <if test="keyword!=null">
        where nickname like '%${keyword}%'
    </if>
;
    </select>

    <select id="pageQueryByKeyword" resultType="com.example.demo.Staff.entitys.Staff">
        SELECT * FROM staff
        <if test="keyword!=null">
            where nickname like '%${keyword}%'
        </if>
       limit ${page*pagesize},#{pagesize}  ;
    </select>

    <select id="pageQueryByKeywordCount" resultType="int">
        SELECT Count(*) FROM staff
        <if test="keyword!=null">
            where nickname like '%${keyword}%'
        </if>
         ;
    </select>

    <delete id="DeleteById">
        delete
        from staff
        where id =#{id};
    </delete>

    <update id="DisableById">
        disable from staff where id = #{id};
    </update>









</mapper>